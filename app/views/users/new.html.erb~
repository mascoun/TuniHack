            <%= f.text_field :role, placeholder:"Role"  %>
          </div>
        </div>
        <div class="field">
	    <%= f.select :hospital_id, options_from_collection_for_select(Hospital.where(approved: true), :id, :name),:prompt => "Select a hospital",class: "form-control" %>
        </div>

	<%= f.submit  "Login", class:"ui fluid large teal submit button" %>
      </div>
     <% flash.each do |message_type, message| %>
